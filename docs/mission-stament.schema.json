{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Mission Statement",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the system"
        },
        "purpose": {
            "type": "string",
            "description": "The purpose of the system"
        },
        "responsibilities": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "description": {
                        "type": "string"
                    }
                }
            }
        },
        "exclusions": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "description": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "required": ["name", "purpose", "responsibilities", "exclusions"]
}